{
  // Manifest for Tokenizer Extension
  "manifest_version": 3,
  "name": "Tokenizer Extension",
  "version": "1.2",
  "description": "Tokenize highlighted or pasted text with auto-detection.",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
} 